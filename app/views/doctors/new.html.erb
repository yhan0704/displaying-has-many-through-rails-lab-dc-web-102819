<!--
displays the doctor's name, department, and appointments, 
with each appointment's date, time, and patient name (linking to the patient's show page).
-->

<h1>Create New Doctor</h1>

<%= form_for @doctor do |d| %>
<%= d.label :name %>
<%= d.text_field :name %><br><br>
<%= d.label :department %>
<%= d.text_field :department %><br><br>
<%= d.submit "Create Doctor" %>
<% end %>